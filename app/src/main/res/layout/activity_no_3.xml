<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.opro.ken.color_picker.no_1">

    <TextView
        android:id="@+id/tv_no3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="3"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"

        />


    <TextView
        android:id="@+id/tv_message3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tv_no3"
        android:layout_centerHorizontal="true"
        android:text="Main傳來的資料"
        android:textSize="25sp"

        />

    <RadioGroup

        android:id="@+id/rg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_message3"
        >

        <RadioButton
            android:id="@+id/NO3_ans_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click"
            android:tag="A"/>

        <RadioButton
            android:id="@+id/NO3_ans_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click"
            android:tag="B"/>

        <RadioButton
            android:id="@+id/NO3_ans_C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click"
            android:tag="C"/>

    </RadioGroup>


    <Button
        android:id="@+id/b3"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@+id/rg1"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:onClick="back"
        android:text="Back"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/b4"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/b3"
        android:layout_below="@+id/rg1"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:onClick="main"
        android:text="Main"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/b6"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/b4"
        android:layout_below="@+id/rg1"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:onClick="OK"
        android:text="OK"
        android:textSize="20sp"
        />
</RelativeLayout>